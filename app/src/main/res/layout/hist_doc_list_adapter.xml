<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:layout_marginTop="@dimen/eleven"
    android:layout_marginLeft="@dimen/sixteen"
    app:cardCornerRadius="@dimen/five"
    android:layout_marginRight="@dimen/sixteen">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_margin="5dp"
        android:weightSum="20">
        <TextView
            android:id="@+id/drname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:textColor="#4D4D4D"
            android:layout_weight="16"
            android:singleLine="true"
            android:textStyle="bold"
            android:ellipsize="end"
            android:textSize="18sp"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:gravity="left"/>

        <ImageButton
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_weight="1"
            android:backgroundTint="@color/textcolorwhite"
            android:id="@+id/view"
            android:layout_marginRight="5dp"
            android:src="@drawable/ic_eye"/>

    </LinearLayout>

</android.support.v7.widget.CardView>